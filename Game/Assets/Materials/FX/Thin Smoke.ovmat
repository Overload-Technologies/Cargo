<root>
    <shader>Shaders\Smoke.ovfx</shader>
    <settings>
        <blendable>true</blendable>
        <backface_culling>true</backface_culling>
        <frontface_culling>false</frontface_culling>
        <depth_test>true</depth_test>
        <depth_writing>false</depth_writing>
        <color_writing>true</color_writing>
        <cast_shadows>false</cast_shadows>
        <receive_shadows>false</receive_shadows>
        <gpu_instances>100</gpu_instances>
    </settings>
    <uniforms>
        <uniform>
            <name>u_CosinAmplitude</name>
            <value>
                <x>0.1</x>
                <y>1</y>
                <z>0.5</z>
            </value>
        </uniform>
        <uniform>
            <name>u_CosinFrequency</name>
            <value>
                <x>4</x>
                <y>1</y>
                <z>3</z>
            </value>
        </uniform>
        <uniform>
            <name>u_Diffuse</name>
            <value>
                <x>0.86274511</x>
                <y>0.86273646</y>
                <z>0.86273646</z>
                <w>0.48500001</w>
            </value>
        </uniform>
        <uniform>
            <name>u_DiffuseMap</name>
            <value>Textures\FX\smoke.png</value>
        </uniform>
        <uniform>
            <name>u_MaxHeight</name>
            <value>4</value>
        </uniform>
        <uniform>
            <name>u_Spacing</name>
            <value>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </value>
        </uniform>
        <uniform>
            <name>u_TextureOffset</name>
            <value>
                <x>1</x>
                <y>0</y>
            </value>
        </uniform>
        <uniform>
            <name>u_TextureTiling</name>
            <value>
                <x>1</x>
                <y>1</y>
            </value>
        </uniform>
        <uniform>
            <name>u_Velocity</name>
            <value>
                <x>0</x>
                <y>3</y>
                <z>0</z>
            </value>
        </uniform>
    </uniforms>
</root>
